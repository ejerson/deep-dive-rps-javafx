<?import java.lang.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.collections.FXCollections?>
<?import javafx.geometry.HPos?>

<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import edu.cnm.deepdive.ca.rps.views.TerrainView?>
<GridPane xmlns:fx="http://javafx.com/fxml"
      fx:controller="edu.cnm.deepdive.ca.rps.controllers.Controller"
      alignment="center"
      hgap="10"
      vgap="10">

  <columnConstraints>
    <ColumnConstraints
    percentWidth="33.33" />
    <ColumnConstraints
      percentWidth="33.33" />
    <ColumnConstraints
      percentWidth="33.33" />
  </columnConstraints>

  <rowConstraints>
    <RowConstraints
    minHeight="700"
    maxHeight="700" />
  </rowConstraints>

  <Label
    text="%speedSliderText"
    labelFor="$speedSlider"
    GridPane.columnIndex="0"
    GridPane.rowIndex="1"
    GridPane.rowSpan="20"
    GridPane.halignment="CENTER"
    GridPane.columnSpan="2"
    >
    <padding>
      <Insets top="50" />
    </padding>
  </Label>

  <TerrainView
    fx:id="terrainView"
    GridPane.rowIndex="0"
    GridPane.columnIndex="0"
    GridPane.columnSpan="3"
    GridPane.halignment="CENTER"
    width="600"
    height="600"
    >
  </TerrainView>

  <Slider
    fx:id="speedSlider"
    min="0.1"
    max="1"
    minorTickCount="0"
    majorTickUnit="0.1"
    snapToTicks="true"
    showTickMarks="true"
    showTickLabels="true"
    blockIncrement="0.1"
    value="0.5"
    valueChanging="true"
    GridPane.rowIndex="1"
    GridPane.columnIndex="0"
    GridPane.columnSpan="2"
    maxWidth="400"
    GridPane.halignment="CENTER"
    GridPane.rowSpan="20"
    />

  <Slider
    fx:id="mixingSlider"
    min="0"
    max="100"
    minorTickCount="1"
    majorTickUnit="50"
    snapToTicks="true"
    showTickMarks="true"
    showTickLabels="true"
    blockIncrement="1"
    value="1"
    valueChanging="true"
    GridPane.rowIndex="3"
    GridPane.columnIndex="0"
    GridPane.columnSpan="2"
    maxWidth="400"
    GridPane.halignment="CENTER"
  >
    <padding>
      <Insets top="30" bottom="10"/>
    </padding>
  </Slider>

  <Label
    text="%choiceBoxText"
    labelFor="$neighborhoodChoice"
    GridPane.columnIndex="2"
    GridPane.rowIndex="1"
    GridPane.rowSpan="20"
    GridPane.halignment="LEFT"
    GridPane.columnSpan="2"
  >
    <padding>
      <Insets top="50" left="2"/>
    </padding>
  </Label>

  <ChoiceBox
    fx:id="neighborhoodChoice"
    onAction="#changeNeighborhood"
    GridPane.rowIndex="1"
    GridPane.columnIndex="2"
    GridPane.rowSpan="20"
    GridPane.halignment="LEFT"
    maxWidth="200"
  >
  </ChoiceBox>


  <Button
    fx:id="runButton"
    GridPane.rowIndex="2"
    GridPane.columnIndex="0"
    text="%runButtonText"
    onAction="#runModel"
    GridPane.halignment="CENTER"
    prefWidth="100"/>

  <Button
    fx:id="stopButton"
    GridPane.rowIndex="2"
    GridPane.columnIndex="1"
    text="%stopButtonText"
    disable="true"
    onAction="#stopModel"
    GridPane.halignment="CENTER"
    prefWidth="100"/>

  <Button
    fx:id="resetButton"
    GridPane.rowIndex="2"
    GridPane.columnIndex="2"
    text="%resetButtonText"
    onAction="#resetModel"
    GridPane.halignment="CENTER"
    prefWidth="100"/>

</GridPane>